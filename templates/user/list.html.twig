{% extends 'base.html.twig' %}

{% block title %}
    Users
{% endblock %}

{% block header %}
    <h3 class="page-title">Employee list</h3>
{% endblock %}

{% block pageToolbar %}
    {% set ADMIN_USER =  (app.user and is_granted('ROLE_ADMIN')) %}
    {% if ADMIN_USER %}
        <div class="navbar">
            <a href="{{ path('user_new') }}" class="dropdown-item">
                <i class="fa fa-plus fa-white"></i>
                Add employee
            </a>
        </div>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="table-responsive">
                <table class="table table-striped custom-table mb-0 datatable">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Email</th>
                        <th>Is enabled</th>
                        <th>Created at</th>
                        <th>Created by</th>
                        <th>Last login at</th>
                        <th class="text-right">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr {% if not user.isEnabled %}class="table-danger"{% endif %}>
                        <td>{{ user.username }}</td>
                        <!-- <td>{{ user.username }}</td> -->
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{% if user.isEnabled %}Yes{% else %}No{% endif %}</td>
                        <td>{% if user.createdAt %}{{ user.createdAt|date('d-M-Y') }}{% endif %}</td>
                        <td>{{ user.createdBy }}</td>
                        <td>{% if user.lastLoginAt %}{{ user.lastLoginAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td class="text-right">
                            <div class="dropdown dropdown-action">
                                <a class="dropdown-item" href="{{ path('user_edit', { 'id': user.id }) }}"><i class="fa fa-pencil m-r-5"></i></a>
                            </div>
                        </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
    {% include 'user/activate_modal.html.twig' %}
    {% include 'user/deactivate_modal.html.twig' %}
{% endblock %}
