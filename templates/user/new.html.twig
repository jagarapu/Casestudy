{% extends 'base.html.twig' %}

{% block title %}
    Add User
{% endblock %}

{% block header %}
    <h3 class="page-title">User creation</h3>
{% endblock %}

{% block body %}
{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.username) }}
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.email) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.firstName) }}
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.lastName) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.employeeId) }}
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.roles) }}
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <button class="btn btn-primary" type="submit" value="Save">Save</button>
                    <a class="btn btn-dark" href="{{ path('home_page') }}">Back to the list</a>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}