{% extends 'base.html.twig' %}

{% block title %}
    Profile
{% endblock %}

{% block header %}
    <h3 class="page-title">{{ user.firstName }} {{ user.lastName }} profile</h3>
{% endblock %}

{% block body %}
            <!-- Row -->
            <div class="row">
                <!-- Column -->
                <div class="col-lg-2 col-xlg-2 col-md-2"></div>
                <div class="col-lg-8 col-xlg-8 col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <center class="m-t-30">
                                <img src="{{ asset('build/assets/public/image/avatar.jpg') |imagine_filter('office_logo') }}" alt="profile-pic"
                                     class="rounded-circle" alt="profile-pic"/>
                                <h3 class="card-title m-t-10">{{ user.username }}</h3>
                            </center>
                        </div>
                        <div>
                            <hr>
                        </div>
                        <div class="card-body">
                            <h4 class="text-muted">Name</h4>
                            <h6> {{ user.firstName }} {{ user.lastName }} </h6>
                            <h4 class="text-muted p-t-15 db">Email address</h4>
                            <h6> {{ user.email }} </h6>
                            <h4 class="text-muted p-t-15 db">CreatedAt</h4>
                            <h6> {{ user.createdAt|date('d-M-Y H:i:s') }} </h6>
                            <h4 class="text-muted p-t-15 db">Role Details</h4>
                            <h6>
                            {% for role in user.roles %}
                                {{ role }}{% if not loop.last %},{% endif %}
                            {% endfor %}
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row -->
{% endblock %}
