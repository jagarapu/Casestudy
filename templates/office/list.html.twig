{% extends 'base.html.twig' %}

{% block title %}
    Offices
{% endblock %}

{% block header %}
    <h3 class="page-title">Offices list</h3>
{% endblock %}

{% block body %}
    <div class="table-responsive">
                <table class="table table-striped custom-table mb-0 datatable">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Postal Code</th>
                        <th>Phone Number</th>
                        <th>Is enabled</th>
                        <th>Created at</th>
                        <th>Created by</th>
                        <th class="text-right">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for office in offices %}
                        <tr {% if not office.isEnabled %}class="table-danger"{% endif %}>
                        <td>{{ office.title }}</td>
                        <td>{{ office.address }}</td>
                        <td>{{ office.phoneNumber }}</td>
                        <td>{% if office.isEnabled %}Yes{% else %}No{% endif %}</td>
                        <td>{% if office.createdAt %}{{ office.createdAt|date('d-M-Y') }}{% endif %}</td>
                        <td>{{ office.createdBy }}</td>
                        <td class="text-right">
                            <div class="dropdown dropdown-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="{{ path('office_edit', { 'id': office.id }) }}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                    {% if office.isEnabled %}
                                        <a class="node-action dropdown-item common-modal" data-toggle="modal"  data-target="#deactivate_record" data-route="{{ path('office_toggle_activation', { 'id': office.id }) }}">
                                            <i class="fa fa-unlock m-r-5"></i>
                                            Deactivate
                                        </a>
                                    {% else %}
                                        <a class="node-action dropdown-item common-modal" data-toggle="modal"  data-target="#activate_record" data-route="{{ path('office_toggle_activation', { 'id': office.id }) }}">
                                            <i class="fa fa-lock m-r-5"></i>
                                            Activate
                                        </a>
                                    {% endif %}
                                </div>
{#                                <a class="node-action dropdown-item common-modal" data-toggle="modal"  data-target="#office_entry" data-route="{{ path('office_entry', { 'id': office.id }) }}">#}
{#                                    <i class="fa fa-lock m-r-5"></i>#}
{#                                    Entry#}
{#                                </a>#}
                                <a class="dropdown-item" href="{{ path('office_entry', { 'id': office.id }) }}"><i class="fa fa-pencil m-r-5"></i> Entry</a>
                            </div>
                        </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
{% endblock %}
